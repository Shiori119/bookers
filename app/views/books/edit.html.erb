</header>

<%= form_with(model:@book, local: true) do |form| %>
  <% if @book.errors.any? %>
    <div class="error_message">
      <h2 class ="error_text"><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
